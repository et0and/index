{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		},
		"target": "ES2017"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/app/pursuits/page.mdx",
		"src/app/api/route.js",
		"src/lib/utils/arena/api.ts",
		"src/components/graph.jsx",
		"tailwind.config.js",
		"src/components/spatial.are.na/graph.jsx",
		".next/types/app/twitter/page.tsx",
		"src/data/tweets.json",
		"src/components/last-fm/graph.jsx",
		"src/components/app/arena/arena-graph.jsx"
	],
	"exclude": ["node_modules"]
}
